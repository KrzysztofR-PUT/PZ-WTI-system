@model ScholarshipWebApplication.Models.Database.Dates


@{
    ViewBag.Title = "Stypendium dla osób niepełnosprawnych";
    var grid = new WebGrid(source: Model.ListDates);
}

<h2>Stypendium dla osób niepełnosprawnych</h2>
<p>
    Wypełnij dokument żeby ubiegać o stypendium dla niepełnosprawnych.
</p>
<p><a class="btn btn-default" href=@Url.Action("DisabledSchDoc", "Scholarship")>Wypełnij dokumenty</a></p>

<div class="col-md-offset-8 col-md-4">
    <h2>Terminy:</h2>
    @grid.GetHtml(

                displayHeader: false,
                columns: grid.Columns(
                grid.Column("enddate"),
                grid.Column("name")

    )
            )

</div>